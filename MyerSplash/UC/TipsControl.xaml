<UserControl x:Class="MyerSplash.UC.TipsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:MyerSplash.UC"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Height="320"
             MaxWidth="600"
             d:DesignHeight="600"
             d:DesignWidth="468"
             mc:Ignorable="d">

    <Grid Background="{StaticResource TitleBarDarkBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Button x:Name="CloseBtn"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="CloseBtn_Click"
                    Style="{StaticResource ListButtonStyle}"
                    Visibility="Visible" Margin="0,0,8,0">
                <FontIcon FontFamily="Segoe MDL2 Assets"
                          Foreground="White"
                          Margin="12"
                          Glyph="&#xE106;" FontSize="16" />
            </Button>

            <TextBlock Margin="12,0,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{StaticResource MyerSplashThemeColor}"
                       Text="Tips &amp; Recent updates" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Image Margin="8" Source="ms-appx:///Assets/Image/tips1.png" />
                <StackPanel Grid.Row="1" Margin="8,0,8,8">
                    <TextBlock FontSize="14"
                               Foreground="White"
                               Text="1. Click to view the photographer's webpage to see all his/her photos."
                               TextWrapping="Wrap" />
                    <TextBlock Margin="0,4,0,0"
                               FontSize="14"
                               Foreground="White"
                               Text="2. Poor speed of downloading? Click COPY URL and paste to your outer downloader "
                               TextWrapping="Wrap" />
                </StackPanel>

            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Image Margin="8" Source="ms-appx:///Assets/Image/tips2.png" />
                <StackPanel Grid.Row="1" Margin="8,0,8,8">
                    <TextBlock FontSize="14"
                               Foreground="White"
                               Text="1. Manage your downloaded/downloading images. And you can set them as background and lock screen."
                               TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
