<UserControl x:Class="MyerSplash.UC.PhotoDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:comp="using:SamplesCommon"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:MyerSplash.UC"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="600"
             d:DesignWidth="900"
             mc:Ignorable="d">
    <Grid x:Name="DetailGrid"
          Grid.RowSpan="5"
          Margin="0 5 0 0"
          SizeChanged="DetailGrid_SizeChanged">
        <Border x:Name="MaskBorder"
                Margin="0,-30,0,0"
                Background="#EA000000"
                ManipulationDelta="DetailGrid_ManipulationDelta"
                ManipulationMode="TranslateY"
                Tapped="MaskBorder_Tapped" />
        <Grid x:Name="DetailContentGrid"
              MaxWidth="600"
              Margin="0,-5,0,0"
              Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Grid x:Name="InfoPlaceHolderGrid"
                  Grid.Row="1"
                  SizeChanged="InfoPlaceHolderGrid_SizeChanged">
                <Grid x:Name="InfoGrid" Grid.Row="1">
                    <StackPanel Margin="20,20,150,20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                        <TextBlock x:Name="ByTB"
                                   FontSize="12"
                                   Foreground="#CCFFFFFF"
                                   Text="photo by" />
                        <TextBlock x:Name="NameTB"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#CCFFFFFF"
                                   Text="JuniperPhoton"
                                   TextTrimming="CharacterEllipsis" />
                    </StackPanel>
                    <Button x:Name="CopyUlrBtn"
                            Grid.RowSpan="2"
                            Margin="0,0,10,22"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Background="{x:Null}"
                            Click="CopyURLBtn_Click"
                            Style="{StaticResource ButtonCommonStyle}">
                        <Grid>
                            <Border x:Name="CopyUrlBorder"
                                    Background="White"
                                    CornerRadius="2"
                                    Opacity="0.6" />
                            <TextBlock x:Uid="CopyUrlTB"
                                       x:Name="CopyUrlTB"
                                       Margin="15,5"
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       Text="COPY URL" />
                        </Grid>
                    </Button>
                </Grid>
            </Grid>
            <Grid>
                <Border Margin="0" Background="#FF1B1B1B" />
                <ScrollViewer Background="{x:Null}"
                              BorderBrush="{x:Null}"
                              HorizontalScrollMode="Disabled"
                              Style="{StaticResource ScrollViewerCommonStyle}"
                              VerticalScrollBarVisibility="Auto"
                              VerticalScrollMode="Auto">
                    <Image x:Name="LargeImage" Stretch="UniformToFill" />
                </ScrollViewer>
            </Grid>
            <StackPanel Margin="0,0,0,-25"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                <Button x:Name="ShareBtn"
                        Grid.RowSpan="2"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="{x:Null}"
                        Click="ShareBtn_Click"
                        Style="{StaticResource ButtonCommonStyle}">
                    <Grid>
                        <Ellipse x:Name="ShareBtnEll"
                                 Width="40"
                                 Height="40">
                            <Ellipse.Fill>
                                <SolidColorBrush Color="{StaticResource MyerSplashUnLikedHeartColor}" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <FontIcon x:Name="ShareontIcon"
                                  FontFamily="Segoe MDL2 Assets"
                                  FontSize="17.333"
                                  Glyph="&#xE72D;">
                            <FontIcon.Foreground>
                                <SolidColorBrush Color="{StaticResource MyerSplashLikedHeartColor}" />
                            </FontIcon.Foreground>
                        </FontIcon>
                    </Grid>
                </Button>
                <Grid Grid.RowSpan="2" Margin="0,0,10,0">
                    <Button x:Name="OKBtn"
                            Grid.RowSpan="2"
                            Margin="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="{x:Null}"
                            IsEnabled="False"
                            Style="{StaticResource ButtonCommonStyle}">
                        <Grid>
                            <Ellipse Width="50"
                                     Height="50"
                                     Fill="{StaticResource MyerSplashThemeColor}" />
                            <SymbolIcon Foreground="White" Symbol="Accept" />
                        </Grid>
                    </Button>
                    <Button x:Name="DownloadBtn"
                            Grid.RowSpan="2"
                            Margin="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="{x:Null}"
                            Click="DownloadBtn_Click"
                            Style="{StaticResource ButtonCommonStyle}">
                        <Grid>
                            <Ellipse Width="50"
                                     Height="50"
                                     Fill="{StaticResource MyerSplashThemeColor}" />
                            <SymbolIcon Foreground="White" Symbol="Download" />
                        </Grid>
                    </Button>
                    <Grid x:Name="LoadingHintGrid">
                        <Button x:Name="CancelBtn"
                                Grid.RowSpan="2"
                                Margin="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{x:Null}"
                                Click="CancelBtn_Click"
                                IsEnabled="True"
                                Style="{StaticResource ButtonCommonStyle}">
                            <Grid>
                                <Ellipse Width="50"
                                         Height="50"
                                         Fill="{StaticResource MyerSplashThemeColor}" />
                                <SymbolIcon Foreground="White" Symbol="Cancel" />
                            </Grid>
                        </Button>
                        <Canvas Width="50" Height="50">
                            <Path x:Name="LoadingPath"
                                  Width="50"
                                  Height="50"
                                  Stroke="#CCFFFFFF"
                                  StrokeThickness="3">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigure IsClosed="False" StartPoint="25,1">
                                                <ArcSegment IsLargeArc="False"
                                                            Point="49,25"
                                                            Size="24 24"
                                                            SweepDirection="Clockwise" />
                                            </PathFigure>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Canvas>
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
