<UserControl
    x:Class="MyerSplash.View.Uc.MainNavigationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyerSplash.View.Uc"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="200"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="NavigationItemBlock" TargetType="TextBlock">
            <Setter Property="Margin" Value="10,0,10,0" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Opacity" Value="0.5" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="2" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Opacity="1"
                Style="{StaticResource NavigationItemBlock}"
                Text="NEW" />
            <TextBlock Style="{StaticResource NavigationItemBlock}" Text="FEATURED" />
            <TextBlock Style="{StaticResource NavigationItemBlock}" Text="RANDOM" />
        </StackPanel>
        <Border
            Grid.Row="1"
            Width="35"
            Margin="10,0,10,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Background="Black" />
    </Grid>
</UserControl>
